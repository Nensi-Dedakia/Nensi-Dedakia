@model Helperland.ViewModels.ForgotPasswordViewModel
@{
    Layout = "";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->


    <link href="./css/Style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>



    <div class="modal modal-shadow" id="forgotModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header login-modal-header">
                    <h3 class="modal-title login-main-heading">
                        <b> Forgot Password </b>
                    </h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>
                <form method="post" asp-action="ForgotPassword" asp-controller="Home">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                        <div class="text-danger">@ViewBag.success</div>
                        <div class="input-group mb-3">
                            <input asp-for="email" class="form-control" placeholder="Email"
                                   style="border-right: none;">
                            <span class="input-group-text"> <i class="fas fa-user"></i> </span>
                        </div>
                        <span asp-validation-for="email" class="text-danger"></span>
                        <span class="text-danger">@ViewBag.email</span>
                        <br>
                        <button type="submit" class="btn  login-btn"> Send </button>
                        <br><br>
                        <p class="login-para">
                            <a href="#" class="login-para-links" data-target="#myModal" data-toggle="modal" data-dismiss="modal">
                                <b>
                                    Login now
                                </b>
                            </a>
                        </p>
                    </div>
                    </form>
            </div>
        </div>
    </div>

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
<!-- Popper JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>