@model Helperland.ViewModels.ResetPasswordViewModel
@{ 
    Layout = null;
}
<!DOCTYPE html>
 <html>
 <head>
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1">
     <title>Homepage</title>
    
     <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />

     <link href="~/css/Style.css" rel="stylesheet" />
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
 </head>
    <body>
        <h2 class="text-center formheading">Reset Password</h2>

        <div class="container">
            <div class="form">
                <form asp-action="ResetPassword" asp-controller="Home" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            <label>
                                New Password
                            </label>
                            <input asp-for="NewPassword" placeholder="New Password" class="form-control form11" style="margin-bottom:20px;">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            <label>
                                Confirm Password
                            </label>

                            <input asp-for="ConfirmPassword" placeholder="New Password" class="form-control form11" style="margin-bottom:20px;">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>

                    <div class="form-group">
                        @Html.HiddenFor(a => a.ResetCode)
                    </div>

                    <div class="row justify-content-center">
                        <button type="submit" class="submit">Submit</button>
                    </div>


                </form>
            </div>
        </div>
     </body>
</html>